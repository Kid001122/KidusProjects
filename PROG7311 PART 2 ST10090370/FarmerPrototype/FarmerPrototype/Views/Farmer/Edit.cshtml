@model FarmerPrototype.Models.Farmer

@{
    ViewData["Title"] = "Edit";
}
@{
    <link href="@Url.Content("~/wwwroot/css/site.css")" rel="stylesheet" type="text/css" />
}

<h1>Edit</h1>

<h4>Farmer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FarmerID" class="control-label"></label>
                <input asp-for="FarmerID" name="txtFarmerID"class="form-control" />
                <span asp-validation-for="FarmerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" name="txtFirstName"class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surnmae" class="control-label"></label>
                <input asp-for="Surnmae" name="txtSurname"class="form-control" />
                <span asp-validation-for="Surnmae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" name="txtEmail"class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" name="txtPassword"class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
